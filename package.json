{
  "name": "Spatomify",
  "main": "./lib/spatomify",
  "version": "1.1.2",
  "description": "A short description of your package",
  "keywords": [
    "atom",
    "spotify",
    "windows",
    "mac",
    "spatomify"
  ],
  "repository": "https://github.com/itotallyrock/spatomify",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "bugs": {
    "url": "https://github.com/itotallyrock/Spatomify/issues/new"
  },
  "consumedServices": {
    "status-bar": {
      "versions": {
        "^1.0.0": "consumeStatusBar"
      }
    }
  },
  "configSchema": {
    "showArt": {
      "title": "Show Album Art",
      "description": "Whether or not to display a small preview of the album art next to the song name.",
      "type": "boolean",
      "default": true
    },
    "clickAction": {
      "title": "Click Action",
      "description": "What command to execute when clicking the song title in the status bar.",
      "type": "string",
      "default": "spatomify:togglepause"
    },
    "colorize": {
      "title": "Colorize",
      "description": "Fancy color animation on the album art.",
      "type": "boolean",
      "default": false
    }
  },
  "dependencies": {
    "spotify-web-helper": "^1.7.1"
  },
  "devDependencies": {
    "eslint": "^3.15.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.1",
    "eslint-plugin-standard": "^2.0.1"
  }
}
